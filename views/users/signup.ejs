<!DOCTYPE html>
<html>
<head>
    <title>User Sign Up</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5 custom-login-bg">
                <div class="card-body p-4 p-sm-5">
                    <h1 class="text-center">User Sign Up</h1>
                    <form method="POST" action="/signup">
                        <% if (typeof error !== 'undefined') { %>
                            <div class="alert alert-danger">
                                <%= error %>
                            </div>
                        <% } %>
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="name" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number:</label>
                            <input type="text" class="form-control" placeholder="Enter phone number" id="phone" name="mobile" pattern="[0-9]{10}" title="Please enter a 10-digit number" inputmode="numeric" oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10)" required>
                            <% if (typeof phoneError !== 'undefined') { %>
                                <div class="text-danger"><%= phoneError %></div>
                            <% } %>
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email address" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm Password:</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password" required>
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <h6><a href="#">Forgotten password</a></h6>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Signup</button>
                        </div>
                        <div>
                            <p class="mb-0">Already have an account? <a href="/login" class="text-primary-50 fw-bold">Login</a></p>
                        </div>
                        <h6> <a href="/otp-login">Login with OTP </a></h6>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
