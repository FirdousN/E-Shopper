<script>
    function  addToCart(slug,page) {
        console.log('👑 addToCart Button',slug , page);
        $.ajax({
            url: '/add-to-cart/'+ slug +'/'+ page,
            method: 'get',
            success: (response) => {
                // alert(response)
                // $('#cart-count').text(response.count);
                document.getElementById('cart-count').innerHTML = response.cartCount;
            },
            error: (xhr, status, error) => {
                console.log(xhr.responseText);
            }
        });
    }

</script>

<script>
    // Function to handle the filter and fetch products
    function applyFilters() {
        const priceFilters = []; // Array to store selected price filters
        const categoryFilters = []; // Array to store selected category filters
 
        // Get selected price filters
        $('#priceFilterForm input:checked').each(function () {
            priceFilters.push($(this).attr('id'));
        });

        // Get selected category filters
    $('#categoryFilterForm input:checked').each(function () {
        const categoryId = $(this).attr('id').split('-')[1];
        categoryFilters.push(categoryId);
    });

        // AJAX call to fetch filtered products
        $.ajax({
            url: '/getFilteredProducts',
            method: 'POST',
            data: {
                priceFilters: priceFilters,
                categoryFilters: categoryFilters
            },
            success: (response) => {
                // Update the product list with the new filtered products
                const products = response.products;
                console.log(products, 'Filtered products');

                let productHtml = '';
                products.forEach((product) => {
                    productHtml += `
                        <!-- Add product card here -->
                        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                            <div class="card product-item h-100 border-0 mb-4">
                                <!-- Product image -->
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0"
                                    style="height: 70%;">
                                    ${product.image.length > 0 ? `
                                        <img class="img-fluid h-100 w-100 object-fit-cover"
                                            src="/uploads/images/${product.image[0]}" alt="Image">
                                    ` : `
                                        <!-- Add a placeholder image or any default image -->
                                        <img class="img-fluid h-100 w-100 object-fit-cover"
                                            src="/path/to/placeholder-image.jpg" alt="Image">
                                    `}
                                </div>

                                <!-- Product details -->
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3">${product.productName}</h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>$${product.productPrice}</h6>
                                        <h6 class="text-muted ml-2"><del>$${product.productPrice}</del></h6>
                                    </div>
                                </div>

                                <!-- Product actions -->
                                <div class="card-footer d-flex justify-content-between bg-light border">
                                    <a href='/detail?id=${product.slug}' class="btn btn-sm text-dark p-0">
                                        <i class="fas fa-eye text-primary mr-1"></i> View Detail
                                    </a>
                                    <button onclick="addToCart('${product.slug}')"
                                        class="btn btn-sm text-dark p-0 add-to-cart-button">
                                        <i class="fas fa-shopping-cart text-primary mr-1"></i> Add To Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    `;
                });

                $('#productRow').html(productHtml);
            },
            error: (xhr, status, error) => {
                console.log(xhr.responseText);
            }
        });
    }

    // Handle filter form submission and fetch filtered products on button click
    $(document).ready(function () {
        // Event handler for "Apply Filter" button
        $('#applyFilterBtn').on('click', function (event) {
            event.preventDefault(); // Prevent form submission
            applyFilters(); // Call the applyFilters function
        });
    });
</script>
